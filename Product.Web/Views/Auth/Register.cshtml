@model RegistrationRequestDto
<div class="card-body p-4 border-2 bg-primary">
    <div class="row pb-3">
        <form method="post">
            <div class="container border p-4">
            </div>
            <div class="row text-center">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="row">
                <div class="col-12 col-md-6 offset-md-3 pb-2">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                </div>
                <div class="col-12 col-md-6 offset-md-3 pb-2">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                </div>
                <div class="col-12 col-md-6 offset-md-3 pb-2">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                </div>
                <div class="col-12 col-md-6 offset-md-3 pb-2">
                    <input asp-for="Password" class="form-control" placeholder="*******" />
                </div>
                <div class="col-12 col-md-6 offset-md-3 pb-2">
                    <button type="submit" class="form-control btn btn-success bg-success" value="Submit">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>
@model LoginRequestDto
<div class="card-body p-4 border-2 bg-primary">
    <div class="row pb-3">
        <form method="post">
            <div class="container border p-4">
            </div>
            <div class="row text-center">
            </div>
            <div class="row">
                <div class="col-12 col-md-6 offset-md-3 pb-2">
                    <input asp-for="UserName" class="form-control" placeholder="Username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6 offset-md-3 pb-2">
                    <input asp-for="Password" class="form-control" placeholder="********" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6 offset-md-3 pb-2">
                    <button type="submit" class="form-control btn btn-success bg-success" value="Submit">Login</button>
                </div>
            </div>
        </form>
        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}